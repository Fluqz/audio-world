{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",

    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": false,
    "skipLibCheck": true,

    // Source maps for dev tools
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,

    // Optional but tidy: help IDE resolve imports
    "baseUrl": "./src/client",
    "noEmit": true
  },

  "include": ["src/client/**/*"],
  "exclude": ["node_modules", "dist", "src/server"]
}
