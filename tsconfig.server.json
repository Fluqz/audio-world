{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",

    // Node-friendly settings
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Stability
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // Good for server-side dev
    "noEmitOnError": false,

    // Optional: helpful for debugging
    "sourceMap": true,

    // Path mappings
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    }
  },

  "include": ["src/server/**/*", "src/shared/network.ts"],
  "exclude": ["node_modules", "dist", "src/client/**/*", "src/ecs/**/*", "src/globals.ts"]
}
