{
  "name": "audio-world-game",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "concurrently -k \"npm:dev:server\" \"npm:dev:client\"",
    "dev:server": "npm run build:server && concurrently -k \"tsc -p tsconfig.server.json -w\" \"nodemon --watch dist/server -e js --exec node dist/server/index.js\"",
    "dev:client": "vite",
    "build:client": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "build": "npm run build:server && npm run build:client"
  },
  "author": "Hallodri",
  "license": "ISC",
  "devDependencies": {
    "@types/dat.gui": "^0.7.7",
    "@types/express": "^4.17.15",
    "@types/three": "^0.148.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "concurrently": "^7.6.0",
    "dat.gui": "^0.7.9",
    "eslint": "^9.33.0",
    "nodemon": "^2.0.20",
    "typescript": "^5.9.3",
    "vite": "^5.4.21"
  },
  "dependencies": {
    "express": "^4.18.2",
    "rxjs": "^7.8.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.5.4",
    "stats.js": "^0.17.0",
    "three": "^0.179.1",
    "three-mesh-bvh": "^0.5.24",
    "tone": "^15.1.22"
  }
}
